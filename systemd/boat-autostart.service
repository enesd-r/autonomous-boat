[Unit]
Description=Autonomous Boat Auto Start Service
After=network.target

[Service]
Type=simple
ExecStart=/usr/bin/python3 /home/pi/autonomous-boat/src/main.py
WorkingDirectory=/home/pi/autonomous-boat
StandardOutput=append:/home/pi/logs/boat.log
StandardError=append:/home/pi/logs/boat-error.log
Restart=always
User=pi

[Install]
WantedBy=multi-user.target

